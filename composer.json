{
    "name": "rpungello/tcpdf-table",
    "description": "Table generation for TCPDF library",
    "keywords": [
        "rpungello",
        "tcpdf-table"
    ],
    "homepage": "https://github.com/rpungello/tcpdf-table",
    "license": "MIT",
    "authors": [
        {
            "name": "Rob Pungello",
            "email": "rob.pungello@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Rpungello\\TcpdfTable\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Rpungello\\TcpdfTable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
             "pestphp/pest-plugin": true
         }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
